@model IEnumerable<Labaratory.Models.AnalyzeCategory>

@{
    ViewData["Title"] = "Категории анализов";
}

<div class="card pd-20 pd-sm-40">
    <h6 class="card-body-title">Список категорий анализов</h6>
    <p class="mg-b-20 mg-sm-b-30">Категории, к которым привязываются анализы.</p>

    <div class="mb-3">
        <button class="btn btn-success" data-toggle="modal" data-target="#createCategoryModal">Добавить категорию</button>
    </div>

    <div class="table-responsive">
        <table class="table display responsive nowrap">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Название категории</th>
                    <th>Дата добавления</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.CategoryName</td>
                        <td>@category.AddDate.ToString("dd.MM.yyyy")</td>
                        <td>
                            <div class="d-flex">
                                <button class="btn btn-sm btn-primary" onclick="openEditCategory(@category.Id, '@category.CategoryName')">Изменить</button>
                                <form asp-action="Delete" method="post" asp-controller="AnalyzeCategory" asp-route-id="@category.Id" style="display:inline;" onsubmit="return confirm('Удалить эту категорию?');">
                                    <button type="submit" class="btn btn-sm btn-danger ml-1">Удалить</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<!-- Модальное окно создания -->
<div class="modal fade" id="createCategoryModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form method="post" asp-action="CreateCategory">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Добавить категорию анализа</h5>
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Название категории</label>
                        <input type="text" name="CategoryName" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Модальное окно редактирования -->
<div class="modal fade" id="editCategoryModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form method="post" action="/AnalyzeCategory/EditCategory">
            <input type="hidden" name="Id" id="editCategoryId" />
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Редактировать категорию</h5>
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Название категории</label>
                        <input type="text" name="CategoryName" id="editCategoryName" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    function openEditCategory(id, name) {
        $('#editCategoryId').val(id);
        $('#editCategoryName').val(name);
        $('#editCategoryModal').modal('show');
    }
</script>

