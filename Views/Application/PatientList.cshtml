@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model IPagedList<Labaratory.Models.Patient>
@{
    ViewData["Title"] = "Список пациентов";
}

<div class="card pd-20 pd-sm-40">
    <h6 class="card-body-title">Список пациентов</h6>
    <p class="mg-b-20 mg-sm-b-30">Список всех зарегистрированных пациентов.</p>

    <div class="mb-3 d-flex justify-content-between align-items-center">
        <a href="/Patient/Index" class="btn btn-success">Создать нового пациентов</a>

        <form method="get" asp-action="PatientList" class="d-flex align-items-center">
            <label class="mb-0 me-2">
                <input type="search" name="searchQuery" class="form-control" placeholder="Поиск по ID, номеру, ФИО..." value="@Context.Request.Query["searchQuery"]">
            </label>
            <button type="submit" class="btn btn-primary">Поиск</button>
        </form>
    </div>


    <div class="table-responsive">
        <div class="table-wrapper">
            <table id="datatable1" class="table display responsive nowrap">
                <thead>
                    <tr>
                        <th class="wd-5p">№</th>
                        <th class="wd-20p">ФИО</th>
                        <th class="wd-10p">Дата рождения</th>
                        <th class="wd-10p">Адресс</th>
                        <th class="wd-10p">Номер телефона</th>
                        <th class="wd-10p">E-mail</th>
                        <th class="wd-10p">Дата создания</th>
                        <th class="wd-25p">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int index = (Model.PageNumber - 1) * Model.PageSize + 1; 
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.Surname @user.Name @user.Lastname</td>
                                <td>@user.BirthDay</td>
                                <td>@user.Adress</td>
                                <td>@user.PhoneNumber</td>
                                <td>@user.Email</td>
                                <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>

                                    <div class="d-flex">
                                        <form asp-controller="Application" asp-action="Index" asp-route-id="@user.Id" method="post">
                                            <button type="submit" class="btn btn-sm btn-primary" onclick="return confirm('Вы уверены, что хотите создать заявку для этого пользователя?');">
                                                Создать заявку
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
        </div><!-- table-wrapper -->
    </div>

    <div class="ht-80 bd d-flex align-items-center justify-content-center">
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-basic mg-b-0">
                @if (Model!.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("PatientList", new { searchQuery = ViewBag.SearchQuery,page = Model.PageNumber - 1 })" aria-label="Previous">
                            <i class="fa fa-angle-left"></i>
                        </a>
                    </li>
                }
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.PageNumber)
                    {
                        <li class="page-item active"><a class="page-link" href="#">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="@Url.Action("PatientList", new { searchQuery = ViewBag.SearchQuery,page = i })">@i</a></li>
                    }
                }
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("PatientList", new { searchQuery = ViewBag.SearchQuery,page = Model.PageNumber + 1 })" aria-label="Next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>

</div><!-- card -->