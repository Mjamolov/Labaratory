@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Labaratory.Models.PatientApplication>

@{
    ViewData["Title"] = "Список заявок";
}

<div class="card pd-20 pd-sm-40">
    <h6 class="card-body-title">Список заявок</h6>
    <p class="mg-b-20 mg-sm-b-30">Список всех зарегистрированных заявок.</p>

    <div class="mb-3 d-flex justify-content-between align-items-center">
        <a href="/Application/PatientList" class="btn btn-success">Создать новую заявку</a>

        <form method="get" asp-action="ApplicationList" class="d-flex align-items-center">
            <label class="mb-0 me-2">
                <input type="search" name="searchQuery" class="form-control" placeholder="Поиск по ID, номеру, ФИО..." value="@Context.Request.Query["searchQuery"]">
            </label>
            <button type="submit" class="btn btn-primary">Поиск</button>
        </form>
    </div>
    <div class="table-responsive">
        <div class="table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID заявки</th>
                        <th>ID пациента</th> 
                        <th>Пациент</th>
                        <th>Телефон</th>
                        <th>Доктор(а)</th>
                        <th>Тип оплаты</th>
                        <th>Сумма оплаты</th>
                        <th>Общая стоимость</th>
                        <th>Итоговая стоимость</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var application in Model)
                    {
                        <tr>
                            <td>@application.Id</td>
                            <td>@application.PatientId</td> <!-- добавлено -->
                            <td>@($"{application.Patient?.Name} {application.Patient?.Surname} {application.Patient?.Lastname}")</td>
                            <td>@application.Patient?.PhoneNumber</td>
                            <td>
                                @if (application.DoctorsList.Any())
                                {
                                    @string.Join(", ", application.DoctorsList.Select(d => $"{d.FirsName} {d.LastName}"))
                                }
                                else
                                {
                                    <span>Не назначено</span>
                                }
                            </td>
                            <td>@application.PaymentType</td>
                            <td>@application.PaymentAmount</td>
                            <td>@application.TotalCost</td>
                            <td>@application.FinalCost</td>
                            <td>
                                <a asp-action="PatientApplications" asp-route-patientId="@application.PatientId" class="btn btn-info btn-sm">
                                    <i class="icon ion-clipboard"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="ht-80 bd d-flex align-items-center justify-content-center">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-basic mg-b-0">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("ApplicationList", new { searchQuery = ViewBag.SearchQuery,page = Model.PageNumber - 1 })" aria-label="Previous">
                                    <i class="fa fa-angle-left"></i>
                                </a>
                            </li>
                        }
                        @for (int i = 1; i <= Model.PageCount; i++)
                        {
                            if (i == Model.PageNumber)
                            {
                                <li class="page-item active"><a class="page-link" href="#">@i</a></li>
                            }
                            else
                            {
                                <li class="page-item"><a class="page-link" href="@Url.Action("ApplicationList", new { searchQuery = ViewBag.SearchQuery,page = i })">@i</a></li>
                            }
                        }
                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("ApplicationList", new { searchQuery = ViewBag.SearchQuery,page = Model.PageNumber + 1 })" aria-label="Next">
                                    <i class="fa fa-angle-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>

        </div>
    </div>

</div><!-- card -->
