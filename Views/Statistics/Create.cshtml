@model Labaratory.Models.Statistics

@{
    ViewData["Title"] = "Добавить расход";
}

<div class="card pd-20 pd-sm-40">
    <h6 class="card-body-title">Добавление затрат</h6>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="ExpenseName">Наименование расхода</label>
            <input asp-for="ExpenseName" class="form-control" />
            <span asp-validation-for="ExpenseName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Amount">Сумма</label>
            <input asp-for="Amount" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>
