@* @model IEnumerable<Labaratory.Models.Statistics> *@
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Labaratory.Models.Statistics>

@{
    ViewData["Title"] = "Расходы";
}

<div class="card pd-20 pd-sm-40">
    <h6 class="card-body-title">Список расходов</h6>
    <p class="mg-b-20 mg-sm-b-30">Список всех расходов.</p>

    <div class="mb-3">
        <button class="btn btn-success" data-toggle="modal" data-target="#createExpenseModal">Добавить расход</button>
    </div>

    <div class="table-responsive">
        <table class="table display responsive nowrap">
            <thead>
                <tr>
                    <th>Наименование расхода</th>
                    <th>Сумма</th>
                    <th>Дата добавления</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ExpenseName</td>
                        <td>@item.Amount</td>
                        <td>@item.AddDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Изменить</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="ht-80 bd d-flex align-items-center justify-content-center">
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-basic mg-b-0">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new {page = Model.PageNumber - 1 })" aria-label="Previous">
                            <i class="fa fa-angle-left"></i>
                        </a>
                    </li>
                }
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.PageNumber)
                    {
                        <li class="page-item active"><a class="page-link" href="#">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a></li>
                    }
                }
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new {page = Model.PageNumber + 1 })" aria-label="Next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

<!-- Модальное окно добавления расхода -->
<div class="modal fade" id="createExpenseModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-vertical-center" role="document">
        <div class="modal-content bd-0 tx-14">
            <div class="modal-header pd-y-20 pd-x-25">
                <h6 class="tx-14 mg-b-0 tx-uppercase tx-inverse tx-bold">Добавить расход</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Закрыть">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body pd-25">
                <form asp-action="Create" method="post">
                    <div class="form-group">
                        <label>Наименование расхода</label>
                        <input type="text" name="ExpenseName" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Сумма</label>
                        <input type="number" name="Amount" class="form-control" step="0.01" required>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-info pd-x-20">Сохранить</button>
                        <button type="button" class="btn btn-secondary pd-x-20" data-dismiss="modal">Закрыть</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
