@model Dictionary<string, (string DoctorName, int TotalAnalyzes, decimal TotalAmount, decimal FinalPayout)>
<div class="card pd-20 pd-sm-40">
    <h6 class="card-body-title">Отчёт о выплатах для врачей</h6>
    <p class="mg-b-20 mg-sm-b-30">Подсчёт основан на оплаченных заявках в указанном периоде.</p>
    <div class="row row-sm mg-t-15 mg-sm-t-20">
        <div class="col-lg-8">
            <div class="card">
                <div class="table-responsive">
                    <form method="get" asp-controller="Statistics" asp-action="DoctorPayouts">
                        <div class="d-flex gap-3 mb-3 ms-3 mt-3">
                            <div class="form-group">
                                <label for="startDate">Дата начала:</label>
                                <input type="date" name="startDate" id="startDate" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label for="endDate">Дата окончания:</label>
                                <input type="date" name="endDate" id="endDate" class="form-control" required />
                            </div>
                            <div class="form-group align-self-end">
                                <button type="submit" class="btn btn-info">Показать</button>
                            </div>
                        </div>
                    </form>

                    <table class="table table-white mg-b-0 tx-12">
                        <thead>
                            <tr>
                                <th>Врач</th>
                                <th>Кол-во анализов</th>
                                <th>Сумма оплат</th>
                                <th>Выплата</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model)
                            {
                                var doctor = entry.Value;
                                <tr>
                                    <td class="pd-l-20 tx-medium">@doctor.DoctorName</td>
                                    <td>@doctor.TotalAnalyzes</td>
                                    <td>@doctor.TotalAmount.ToString("N2") сум</td>
                                    <td class="tx-success tx-bold">@doctor.FinalPayout.ToString("N2") сум</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

