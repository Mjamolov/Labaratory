@{
    ViewData["Title"] = "Финансовая статистика";
}

<div class="card pd-20 pd-sm-40">
    <h6 class="card-body-title">Финансовый отчет</h6>
    <p class="mg-b-20 mg-sm-b-30">Анализ доходов и расходов.</p>

    <form method="get" action="@Url.Action("FinanceReport", "Statistics")">
        <div class="row">
            <div class="col-md-4">
                <label>Дата с:</label>
                <input type="date" name="startDate" class="form-control" value="@(ViewBag.StartDate is DateTime ? ((DateTime)ViewBag.StartDate).ToString("yyyy-MM-dd") : DateTime.Today.AddMonths(-1).ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-md-4">
                <label>Дата до:</label>
                <input type="date" name="endDate" class="form-control" value="@(ViewBag.EndDate is DateTime ? ((DateTime)ViewBag.EndDate).ToString("yyyy-MM-dd") : DateTime.Today.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">Применить</button>
            </div>
        </div>
    </form>

    <div class="row mt-3">
        <div class="col-lg-4">
            <div class="card pd-20">
                <h6 class="tx-12 tx-uppercase tx-inverse tx-bold mg-b-15">Общий баланс</h6>
                <div class="d-flex mg-b-10">
                    <div class="bd-r pd-r-10">
                        <label class="tx-12">Доходы</label>
                        <p class="tx-lato tx-inverse tx-bold">@((ViewBag.TotalIncome ?? 0).ToString("N2"))</p>
                    </div>
                    <div class="bd-r pd-x-10">
                        <label class="tx-12">Расходы</label>
                        <p class="tx-lato tx-inverse tx-bold">@((ViewBag.TotalExpenses ?? 0).ToString("N2"))</p>
                    </div>
                    <div class="pd-l-10">
                        <label class="tx-12">Чистая прибыль</label>
                        <p class="tx-lato tx-inverse tx-bold">@((ViewBag.Balance ?? 0).ToString("N2"))</p>
                    </div>
                </div>
                <div class="progress mg-b-10">
                    <div class="progress-bar wd-50p" role="progressbar" style="width: @(ViewBag.ExpensePercentage ?? 0)%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                        @(ViewBag.ExpensePercentage ?? 0)%
                    </div>
                </div>
                <p class="tx-12 mg-b-0">Процент расходов от доходов.</p>
            </div>
        </div>
        <div class="col-lg-8">
            <canvas id="financeChart"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var dates = @Html.Raw(Json.Serialize(ViewBag.Dates ?? new List<string>()));
            var incomes = @Html.Raw(Json.Serialize(ViewBag.Incomes ?? new List<decimal>()));
            var expenses = @Html.Raw(Json.Serialize(ViewBag.Expenses ?? new List<decimal>()));

            if (dates.length === 0) {
                console.warn("Нет данных для отображения графика.");
                return;
            }

            var ctx = document.getElementById('financeChart').getContext('2d');
            var financeChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: dates,
                    datasets: [
                        {
                            label: 'Доходы',
                            data: incomes,
                            borderColor: 'green',
                            fill: false
                        },
                        {
                            label: 'Расходы',
                            data: expenses,
                            borderColor: 'red',
                            fill: false
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
}
