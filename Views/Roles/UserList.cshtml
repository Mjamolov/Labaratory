@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model IPagedList<Labaratory.Models.User>

<div class="card pd-20 pd-sm-40">
    <h6 class="card-body-title">Список пользователей для добавление Ролей</h6>
    <p class="mg-b-20 mg-sm-b-30">Список всех зарегистрированных пользователей.</p>

    <div class="table-responsive">
        <div class="table-wrapper">
            <table id="datatable1" class="table display responsive nowrap">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Имя</th>
                        <th>Фамилия</th>
                        <th>Роль</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int index = (Model.PageNumber - 1) * Model.PageSize + 1;
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@user.FirsName</td>
                                <td>@user.LastName</td>
                                <td>@user.Role</td>
                                <td>
                                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">
                                        Права доступа
                                    </a>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">Нет зарегистрированных пользователей.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="ht-80 bd d-flex align-items-center justify-content-center">
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-basic mg-b-0">
                @if (Model!.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("UserList", new { page = Model.PageNumber - 1 })" aria-label="Previous">
                            <i class="fa fa-angle-left"></i>
                        </a>
                    </li>
                }
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.PageNumber)
                    {
                        <li class="page-item active"><a class="page-link" href="#">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="@Url.Action("UserList", new { page = i })">@i</a></li>
                    }
                }
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("UserList", new { page = Model.PageNumber + 1 })" aria-label="Next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>

</div><!-- card -->