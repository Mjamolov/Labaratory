@using Microsoft.AspNetCore.Identity
@model Labaratory.Models.ViewModels.ChangeRoleViewModel

<h2>Изменение ролей для пользователя @Model.UserEmail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />

    <div class="form-group">
        <label>Выберите роли для пользователя:</label>
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="roles" value="@role.Name"
                @(Model.UserRoles.Contains(role.Name) ? "checked" : "") />
                <label class="form-check-label">@role.Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
