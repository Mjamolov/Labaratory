@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<div class="card pd-20 pd-sm-40 mg-t-50">
    <h6 class="card-body-title">Список ролей</h6>
    <p class="mg-b-20 mg-sm-b-30">Список всех зарегистрированных ролей.</p>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">Добавить роль</a>
        <a asp-action="UserList" class="btn btn-success">Список пользователей</a>
    </div>

    <div class="table-responsive">
        <div class="table-wrapper">
            <table id="datatable1" class="table display responsive nowrap">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Название роли</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int index = 1;
                        foreach (var role in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@role.Name</td>
                                <td>
                                    <div class="d-flex">
                                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Вы уверены, что хотите удалить эту роль?');">
                                                Удалить
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div><!-- card -->
